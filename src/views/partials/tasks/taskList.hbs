<h1 class="bg-dark text-white p-1"> Tasks </h1>


{{#each tasks}}
  <div class="card m-1" style="max-height: 300px;">

    <div class="card-header">
      <h5 class="text-truncate"> {{title}} </h5>
    </div>

    <div class="card-body text-secondary overflow-auto">
      <p class=""> {{description}} </p>
    </div>

    <div class="card-footer">
      <div class="text-secondary">
        {{#if done}}
          Finished
        {{else}}
          Pending
        {{/if}}
      </div>
      <div class="d-flex justify-content-end">
        <div>
          <a
              href="/tasks/{{_id}}/toggleDone"
              name="btnMark"
              key="{{@index}}"
              {{#if done}}
              class="btn btn-secondary m-1"
            {{else}}
              class="btn btn-success m-1"
            {{/if}}
            >
            {{#if done}}
              Undone
            {{else}}
              Done</a>
            {{/if}}
            <a
            href="/tasks/{{_id}}/edit"
              name="btnEdit"
              key="{{@index}}"
              class="btn btn-info m-1"
            >Edit</a>
            <a
            href="/tasks/{{_id}}/delete"
              name="btnDelete"
              key="{{@index}}"
              class="btn btn-danger m-1"
            >Delete</a>
        </div>
      </div>
    </div>

  </div>
{{else}}
  <h2 class="text-center text-secondary mt-5">No tasks</h2>
{{/each}}
